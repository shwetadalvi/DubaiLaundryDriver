                            app:layout_constraintTop_toTopOf="parent">


                            <TextView
                                android:id="@+id/t1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:text="@string/order_total"
                                android:textSize="18sp"
                                app:layout_constraintRight_toLeftOf="@id/barrier2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/t2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:text="@string/vat_5"
                                android:textSize="18sp"
                                app:layout_constraintRight_toLeftOf="@id/barrier2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/t1" />

                            <TextView
                                android:id="@+id/t3"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:text="@string/net_amount"
                                android:textSize="18sp"
                                app:layout_constraintRight_toLeftOf="@id/barrier2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/t2" />

                            <TextView
                                android:id="@+id/orderTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:padding="5dp"
                                android:text="@string/AED"
                                android:textSize="18sp"
                                app:layout_constraintBaseline_toBaselineOf="@+id/t1"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <TextView
                                android:id="@+id/vat5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:padding="5dp"
                                android:text="@string/AED"
                                android:textSize="18sp"
                                app:layout_constraintBaseline_toBaselineOf="@+id/t2"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <TextView
                                android:id="@+id/netTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:padding="5dp"
                                android:text="@string/AED"
                                android:textSize="18sp"
                                app:layout_constraintBaseline_toBaselineOf="@+id/t3"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <androidx.constraintlayout.widget.Barrier
                                android:id="@+id/barrier2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:barrierDirection="end"
                                app:constraint_referenced_ids="t3,t2,t1" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="Edit"
                    app:backgroundTint="#2E3192" />

                <Button
                    android:id="@+id/btnReject"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="Reject"
                    app:backgroundTint="#2E3192"
                    />
                <Button
                    android:id="@+id/btnPrint"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="Print"
                    app:backgroundTint="#2E3192" />
            </LinearLayout>

            <Button
                android:id="@+id/startTrack"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/start_track"
                app:backgroundTint="#2E3192" />


        </LinearLayout>

        <include
            android:id="@+id/empty_order"
            layout="@layout/no_orders_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

    </RelativeLayout>
</layout>